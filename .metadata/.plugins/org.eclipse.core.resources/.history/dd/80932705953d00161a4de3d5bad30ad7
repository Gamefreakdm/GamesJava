package Graphics.Image;

public class AnimatedSprite {
	private final Sprite sprites[];

	public AnimatedSprite(SpriteSheet sheet,int ss, int l) {
		sprites = new Sprite[l];
	}

	private void Load(int ss, SpriteSheet sheet) {
		int iter = 0;
		for (int y = 0; y < (sprites.length / 2); y++) {
			for (int x = 0; x < (sprites.length / 2); x++) {
				sprites[iter] = sheet.getPixels()[x + (y * ss)];
			}
		}
	}
}
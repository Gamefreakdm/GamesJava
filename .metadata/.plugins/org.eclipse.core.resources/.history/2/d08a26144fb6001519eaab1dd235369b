package Graphics;

public class Sprite {
	protected int[] Pixels;
	public static Sprite Grass_Floor = new Sprite(0, 0, SpriteSheet.Tiles);

	public Sprite(int x, int y, SpriteSheet sheet) {
		Pixels = new int[1024];
		Load(sheet, x << 6, y << 6);
	}

	public Sprite(int Col) {
		Pixels = new int[1024];
		for (int i = 0; i < Pixels.length; i++) {
			Pixels[i] = Col;
		}
	}

	public static void LoadSprites() {
	}

	private void Load(SpriteSheet sp, int X, int Y) {
		for (int y = 0; y < 32; y++) {
			for (int x = 0; x < 32; x++) {
				Pixels[x + y * 32] = sp.getPixels()[(x + X) + (y + Y) * 1024];
			}
		}
	}
}
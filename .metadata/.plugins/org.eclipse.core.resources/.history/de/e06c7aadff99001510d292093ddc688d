package Graphics;

public class Render {
	public int[] Pixels;
	private final int Width, Height;

	public Render(int w, int h) {
		Width = w;
		Height = h;
	}

	public void clearPixels() {
		for (int i = 0; i < Pixels.length; i++) {
			if (Pixels[i] != 0)
				Pixels[i] = 0;
		}
	}

	public int getWidth() {
		return Width;
	}

	public int getHeight() {
		return Height;
	}
}
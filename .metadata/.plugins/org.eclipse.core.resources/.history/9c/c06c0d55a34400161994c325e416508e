package Graphics.Render;

import Graphics.Image.Image;
import Graphics.Image.Sprite;

public class Screen {
	private final int[] Pixels;
	private final int Width, Height;

	public Screen(int W, int H, int[] p) {
		Width = W;
		Height = H;
		Pixels = p;
	}

	public void RenderSprite(Sprite sp, float xp, float yp) {
		for (int y = 0; y < sp.getHeight(); y++) {
			int ya = (int) (y + yp);
			if (ya < 0 || ya > Height)
				continue;
			for (int x = 0; x < sp.getWidth(); x++) {
				int xa = (int) (x + xp);
				if (xa < 0 || xa > Height)
					continue;
				Pixels[xa + (ya * 40000)] = sp.getPixels()[x + (y * sp.getWidth())];
			}
		}
	}

	public void RenderImage(Image im, float xp, float yp) {
		for (int y = 0; y < im.getHeight(); y++) {
			int ya = (int) (y + yp);
			if (ya < 0 || ya > Height)
				continue;
			for (int x = 0; x < im.getWidth(); x++) {
				int xa = (int) (x + xp);
				if (xa < 0 || xa > Height)
					continue;
				Pixels[xa + (ya * Width)] = im.getPixels()[x + (y * im.getWidth())];
			}
		}
	}

	public void clearPixels() {
		for (int i = 0; i < Pixels.length; i++)
			Pixels[i] = 0;
	}

	public void RenderCol(float xp, float yp, int w, int h, int Col) {
		for (int y = 0; y < h; y++) {
			int ya = (int) (y + yp);
			if (ya < 0 || ya > Height)
				continue;
			for (int x = 0; x < w; x++) {
				int xa = (int) (x + xp);
				if (xa < 0 || xa > Width)
					continue;
				Pixels[xa + (ya * Width)] = Col;
			}
		}
	}

	public void RenderCol(float xp, float yp, int ss, int Col) {
		for (int y = 0; y < ss; y++) {
			int ya = (int) (y + yp);
			if (ya < 0 || ya > Height)
				continue;
			for (int x = 0; x < ss; x++) {
				int xa = (int) (x + xp);
				if (xa < 0 || xa > Width)
					continue;
				Pixels[xa + (ya * Width)] = Col;
			}
		}
	}

	public int[] getPixels() {
		return Pixels;
	}
}
package Graphics;

public class Render {
	private final int[] Pixels;
	private final int SIZE;
	private final int Width, Height;

	public Render(int w, int h) {
		Width = w;
		Height = h;
		Pixels = new int[w * h];
		SIZE = 0;
		deSIZE = 0;
	}

	public Render(int w, int h, int s) {
		SIZE = s;
		Width = w;
		Height = h;
		Pixels = new int[w * h];
	}

	public int getWidth() {
		return Width;
	}

	public int getHeight() {
		return Height;
	}

	public int[] getPixels() {
		return Pixels;
	}

	public int getSize() {
		return SIZE;
	}

	protected void setPixels(int access, int result) {
		Pixels[access] = result;
	}
}
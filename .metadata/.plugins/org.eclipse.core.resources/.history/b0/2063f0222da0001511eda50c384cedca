package Entity.Mob;

import Entity.Entity;

public abstract class Mob extends Entity {
	protected boolean Moving = false;

	public void Move(int xa, int ya) {
		if (xa > 0)
			setDir(1);
		if (xa < 0)
			setDir(3);
		if (ya > 0)
			setDir(2);
		if (ya < 0)
			setDir(0);
		if (getDir() == 1 && getX() < 1379)
			setX((getX() + xa));
		if (getDir(3) && getX() > 26.0)
			setY((getY() + ya));
	}

	public void Update() {
	}

	public void Render() {
	}
}
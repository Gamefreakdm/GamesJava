package Main;

import java.awt.event.KeyEvent;
import Input.Controller;

public class Game {
	private double Time = 0;
	private final Controller CO;
	private boolean Running = false;

	public Game() {
		Running = true;
		CO = new Controller();
	}

	public void KeyUpdate(boolean[] key) {
		if (key[KeyEvent.VK_ESCAPE])
			Running = false;
		boolean left = key[KeyEvent.VK_A];
		boolean right = key[KeyEvent.VK_D];
		boolean forward = key[KeyEvent.VK_W];
		boolean backward = key[KeyEvent.VK_S];
		boolean turnl = key[KeyEvent.VK_LEFT];
		boolean turnr = key[KeyEvent.VK_RIGHT];
		CO.Update(forward, backward, left, right, turnl, turnr);
	}

	public void Update() {
		Time++;
	}

	public double getTime() {
		return Time;
	}

	public boolean IsRunning() {
		return Running;
	}
}
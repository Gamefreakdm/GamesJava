package Main;

import java.awt.event.KeyEvent;
import Input.Controller;

public class Game {
	private double Time = 0;
	private static String GS;
	public final Controller CO;
	private double pagetime = 0;
	private boolean Running = false;

	public Game() {
		Running = true;
		CO = new Controller();
	}

	public void KeyUpdate(boolean[] key, double mxos, boolean ist) {
		if (key[KeyEvent.VK_ESCAPE] && GS == "Paused" && pagetime > Time + 13) {
			Running = false;
		}
		if (GS == "Puased" && key[KeyEvent.VK_ENTER])
			GS = "Playing";
		if (GS == "Playing") {
			if (key[KeyEvent.VK_ESCAPE]) {
				GS = "Paused";
				pagetime = Time;
			}
			boolean l = key[KeyEvent.VK_A];
			boolean r = key[KeyEvent.VK_D];
			boolean fw = key[KeyEvent.VK_W];
			boolean bw = key[KeyEvent.VK_S];
			boolean spr = key[KeyEvent.VK_CONTROL];
			boolean cro = key[KeyEvent.VK_SHIFT];
			CO.Update(fw, bw, l, r, ist, mxos, spr, cro);
		}
	}

	public void Update() {
		if (GS == "Playing")
			Time++;
		else
			pagetime++;
	}

	public double getTime() {
		return Time;
	}

	public boolean IsRunning() {
		return Running;
	}

	public boolean InGame() {
		return IsinGame;
	}
}
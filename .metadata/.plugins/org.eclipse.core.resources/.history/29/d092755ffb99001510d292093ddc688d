package Graphics;

public class Screen extends Render {
	private int animTY = 0, animTX = 0;

	public void clearPixels() {
		for (int i = 0; i < getPixels().length; i++) {
			if (getPixels()[i] != 0)
				getPixels()[i] = 0;
		}
	}

	public void Rendertest(float xoffset, float yoffset, int W, int H) {
		animTY++;
		animTX++;
		for (int y = 0; y < H; y++) {
			int ya = (int) (y + yoffset + animTY);
			if (ya < 0 || ya >= getHeight())
				break;
			for (int x = 0; x < W; x++) {
				int xa = (int) (x + xoffset + animTX);
				if (xa < 0 || xa >= getWidth())
					break;
				getPixels()[xa + (ya * getWidth())] = 0x0FF00;
			}
		}
	}

	public void setWHP(int w, int h) {
		setWidth(w);
		setHeight(h);
	}
}

package Input;

import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import java.awt.event.MouseListener;
import java.awt.event.MouseMotionListener;
import java.awt.event.MouseWheelListener;

public class InputHandler implements KeyListener, MouseListener, MouseMotionListener, MouseWheelListener {
	private final boolean[] Key = new boolean[6];
	private final boolean[] Codes = new boolean[129];

	public void Update() {
		Key[0] = Codes[KeyEvent.VK_ESCAPE];
		Key[1] = Codes[KeyEvent.VK_F10];
		Key[2] = Codes[KeyEvent.VK_W];
		Key[3] = Codes[KeyEvent.VK_A];
		Key[4] = Codes[KeyEvent.VK_S];
		Key[5] = Codes[KeyEvent.VK_D];
	}

	public void keyPressed(KeyEvent KP) {
		Codes[KP.getKeyCode()] = true;
	}

	public void keyReleased(KeyEvent KR) {
		Codes[KR.getKeyCode()] = false;
	}

	@Override
	public void keyTyped(KeyEvent KT) {
	}

	public boolean getKey(int i) {
		return Key[i];
	}
}
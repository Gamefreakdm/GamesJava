
import java.awt.Canvas;
import java.awt.Dimension;
import java.awt.Graphics;
import java.awt.Toolkit;
import java.awt.image.BufferStrategy;
import java.awt.image.BufferedImage;
import java.awt.image.DataBufferInt;
import Graphics.Render;
import javax.swing.JFrame;
import Graphics.Screen;
import Input.KeyHandler;

public class Main extends Canvas implements Runnable {
	private boolean Running;
	private final JFrame Frame;
	private BufferedImage bimg;
	private final KeyHandler KH;
	private final String Title;
	private final int Width, Height;
	private Thread mainThread;
	private int[] Pixels;
	private final Dimension screenSize;
	private Render test;
	private static final long serialVersionUID = 1L;

	public Main() {
		System.out.println("[System] Starting...");
		screenSize = Toolkit.getDefaultToolkit().getScreenSize();
		Width = 800;
		Height = 600;
		Title = "3D Game Pre-Alpha 1.0.0";
		KH = new KeyHandler();
		Frame = new JFrame("Loading...");
		new Render(100, 100, 50, 50, screenSize);
	}

	public static void main(String[] args) {
		Main M = new Main();
		M.Frame.add(M);
		M.Frame.addKeyListener(M.KH);
		M.Frame.setSize(M.Width, M.Height);
		M.Frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		M.Frame.setResizable(false);
		M.Frame.setLocationRelativeTo(null);
		M.Frame.setUndecorated(false);
		M.Frame.setVisible(true);
		M.Start();
	}

	private void Start() {
		if (Running)
			return;
		mainThread = new Thread(this);
		mainThread.start();
		Running = true;
	}

	public void run() {
		int Frames = 0;
		int Updates = 0;
		long Timer = System.currentTimeMillis();
		long lastTime = System.nanoTime();
		double Delta = 0;
		long nowTime = 0;
		final double NS = 1000000000.0 / 60;
		System.out.println("[System] Started");
		while (Running) {
			nowTime = System.nanoTime();
			Delta += (nowTime - lastTime) / NS;
			lastTime = nowTime;
			while (Delta >= 1) {
				Tick();
				Updates++;
				Delta--;
			}
			Render();
			Frames++;
			if (System.currentTimeMillis() - Timer >= 1000) {
				Timer += 1000;
				Frame.setTitle(Title + "   |   " + Frames + " Fps" + "   |   " + Updates + " Ticks");
				Frames = 0;
				Updates = 0;
			}
		}
		Stop();
	}

	private void KeyUpdate() {
		Frame.requestFocus();
		KH.Update();
		if (!KH.Keys[0])
			return;
		if (KH.Keys[1])
			Stop();
	}

	private void Tick() {
		KeyUpdate();
	}

	private void Render() {
		BufferStrategy BS = getBufferStrategy();
		if (BS == null) {
			bimg = new BufferedImage(Width, Height, BufferedImage.TYPE_INT_RGB);
			Pixels = ((DataBufferInt) bimg.getRaster().getDataBuffer()).getData();
			createBufferStrategy(3);
			return;
		}
		Graphics g = BS.getDrawGraphics();
		g.drawImage(bimg, 0, 0, Width, Height, null);
		g.dispose();
		BS.show();
	}

	@SuppressWarnings("deprecation")
	public void Stop() {
		if (!Running)
			System.exit(0);
		System.out.println("[System] Stopping...");
		CleanUp();
		mainThread.stop();
		Running = false;
	}

	private void CleanUp() {
		if (Running)
			return;
		Frame.dispose();
	}

	public void setPixels(int[] p) {
		for (int i = 0; i < Pixels.length; i++) {
			Pixels[i] = p[i];
		}
	}
}
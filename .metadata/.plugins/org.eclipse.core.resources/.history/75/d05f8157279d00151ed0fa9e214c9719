package Graphics;

public class Render3D extends Render {

	public Render3D(int w, int h) {
		super(w, h);
	}

	public void Floor() {
		for (int y = 0; y < getHeight(); y++) {
			double ydepth = (y - getHeight() / 2.0);
			double z = 100.0 / ydepth;
			for (int x = 0; x < getWidth(); x++) {
				double xdepth = (x - getWidth() / 2.0);
				xdepth *= z;
				int xx = (int) xdepth & 15;
				int yy = (int) z & 5;
				Main.Main.screen.Pixels[x + (y * getWidth())] = xx * yy + 64;
			}
		}
	}
}
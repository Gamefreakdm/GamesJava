package Graphics;

public class Render {
	private int[] Pixels;
	private final int Width, Height;

	public Render(int w, int h) {
		Width = w;
		Height = h;
	}

	public void clearPixels() {
		for (int i = 0; i < getPixels().length; i++) {
			if (getPixels()[i] != 0)
				getPixels()[i] = 0;
		}
	}

	public int getWidth() {
		return Width;
	}

	public int getHeight() {
		return Height;
	}
}